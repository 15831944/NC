     Print["Starting NCRealizationFunctions.NCTest"];
     
     SetNonCommutative[x,y];
     
     (* test 1  *)
     Print["----test 1 "];
     test[NCRealizationFunctions,1] = 
Rationalize[ NCSymmetricDescriptorRealization[inv[1+x**x],{x}][[2]] ] == {{-1,x},{x,1}};

     (* test 2 *)
     Print["----test 2 "];
     test[NCRealizationFunctions,2] = 
Det[NCDeterminantalRepresentationReciprocal[1+x**y**y**x,{x,y}]] == CommuteEverything[1+x**y**y**x];
      
     (* test 3 *)
     Print["----test 3 "];
     test[NCRealizationFunctions,3] = RJRTDecomposition[{{0,2},{2,0}}] == {{{-1.0,1},{1,1}},{{-1,0},{0,1}}};
     
               
     Print["Results from the file NCRealizationFunctions.NCTest"];

     For[ i=1, i<=3, i++, Print["Test #",i," was ",test[NCRealizationFunctions,i]] ]

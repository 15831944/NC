  test[NCAdjoints,k++] = aj[Pi] === Pi;
  test[NCAdjoints,k++] = aj[I] === -I;
  test[NCAdjoints,k++] = aj[1 + I] === 1 - I;

  saveExpandQ = ExpandQ[aj];

  SetExpandQ[aj, True];

  test[NCAdjoints,k++] = aj[2 a] === 2 aj[a];
  test[NCAdjoints,k++] = aj[3 a ** b] === Unevaluated[3 aj[b] ** aj[a]];
  test[NCAdjoints,k++] = aj[(3 + I) a ** b] === Unevaluated[Complex[3,-1] aj[b] ** aj[a]];

  expr = aj[a**b];
  test[NCAdjoints,k++] = expr === Unevaluated[aj[b] ** aj[a]];


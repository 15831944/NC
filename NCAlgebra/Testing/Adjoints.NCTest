  test[NCAdjoints,k++] = expr === Unevaluated[aj[a ** b] ** d];

  expr = c**aj[b]**aj[a]**d;
  test[NCAdjoints,k++] = expr === Unevaluated[c ** aj[a ** b] ** d];


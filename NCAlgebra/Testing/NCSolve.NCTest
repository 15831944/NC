(* :Author: 	Mark Stankus (mstankus). *)

(* :Summary:    TEST FILE.  *)

(* :History: 
   :8/13/92      Written.(mstankus)
*)

Block[{x,y,a,b,c,d,i},

     Print[ "Running NCSolve.NCTest" ];

     SetNonCommutative[a,b,c,d,x,y];
     test[NCSolve,1] = NCSolveLinear1[a**x==b,x] == 
                                                    {x -> inv[a]**b};
     test[NCSolve,2] = NCSolveCheck[]==0;
     test[NCSolve,3] = NCSolveLinear1[a**y+c==b+d,y] == 
                              {y -> inv[a]**b+ inv[a]**d- inv[a]**c};
     test[NCSolve,4] = NCSolveCheck[]==0;
     test[NCSolve,5] = NCSolveLinear1[a**y==b**y,y] == 
                                              {y -> 0};
     test[NCSolve,6] = NCSolveCheck[]==0;

(*
     test[NCSolve,7] = NCSolveLinear1[a**y+c==b**y,y] == 
                                           {y -> -inv[a-b]**c};

     test[NCSolve,8] = NCSolveCheck[]==c-a**inv[a-b]**c+b**inv[a-b]**c;
*)
     
     
     Print["There should be an error message next..."];

     test[NCSolve,7] = NCSolveLinear1[a**y==a**y,y] == {{}};

     Print["There should have been an error message above..."];

     Print["Results from the file NCSolve.NCTest"];
     For[ i=1, i<= 7, i++,
          Print["Test #",i," was ",test[NCSolve,i]]
     ]
];


Print[];
Print[];
Print["             Automated Testing System       "];
Print[];
Print["    DO NOT LOAD THIS FILE IN THE SAME SESSION AS SYSTEMS    "] ;
Print[];
Get["NCAlgebra.m"];

(* Nov 2015 Mauricio : CommutativeQ pattern issue BEGIN *)
Get["CommutativeQ.NCTest"];
(* Nov 2015 Mauricio : CommutativeQ pattern issue END *)

Get["Diff.NCTest"];

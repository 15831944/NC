SetOptions[$Output,PageWidth->1000];

<< NC`
<< NCAlgebra`
<< NCTest`

On[Assert];

Print["> BEGIN NCTEST\n" ];

tests = {
(*
  "CommutativeQ",
  "NCMultiplication",
  "NCDeprecated",
  "NCUtil",
  "NCSymmetric",
  "NCSelfAdjoint",
  "NCReplace",
  "NCPolynomial",
  "NCSimplifyRational",
  "NCSylvester",
  "NCQuadratic",
  "MatrixDecompositions",
  "NCMatrixDecompositions",
  "NCCollect",
  "NCInverse",
  "NCDiff",
  "NCMatMult",
  "NCRoots",
  "NCConjugate",
  "NCOutput",
*)
  "NCSystem",
  "NCRealization",
(*
  "NCConvexity",
*)
  "Matrix"
};
results = NCTestRun[tests];
NCTestSummarize[results];

Print["\n> END NCTEST\n" ];

Print["> EVEN IF ALL THE TESTS SUCCEEDED YOU SHOULD QUIT THE KERNEL"]
Print["  IN YOUR MATHEMATICA SESSION AND START OVER." ];

$AssertFunction =. ;
Off[Assert];
